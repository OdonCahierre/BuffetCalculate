	public static double Calculation(double[] x, int y){
		double[] costPiece = {0.17, 0.15, 0.12, 0.2, 0.035, 0.05, 0.3, 0.03, 0.32, 0.25};
		double total = 0;
		for(int i = 0; i < 10; i++){
		total += costPiece[i]*x[i];	
		}
		return y-total;
	}
public static void main(String[] args){
	new GUI();
